# Example environment variables for backend
# Copy this to a file named .env in the backend/ directory and fill values

# Local development (default used if not provided):
# MONGODB_URI=mongodb://localhost:27017/foodcourt

# For production use a managed MongoDB connection string:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/foodcourt

# API server port
PORT=5000

# CORS origin (frontend URL)
CORS_ORIGIN=http://localhost:3000
 
# JWT settings
# Set a strong secret in production
JWT_SECRET=your_jwt_secret_here
# Token lifetime, e.g. 7d, 24h
JWT_EXPIRE=7d

# Bcrypt rounds for password hashing
BCRYPT_ROUNDS=10
